#!/usr/bin/make -f
# -*- makefile -*-
# ex: set tabstop=4 noexpandtab:

# Comment this to turn off verbose mode.
export DH_VERBOSE=1
project?=snow

version?=$(shell [ -r debian/changelog ] \
  && which dpkg-parsechangelog > /dev/null 2>&1 \
  && dpkg-parsechangelog | grep "Version:" | sed -e "s/Version: \(.*\)-.*/\1/g" \
  || echo "0.0")
export version

tarball?=${CURDIR}/../${project}_${version}.orig.tar.gz
export tarball

default: rule/debuild
	@echo "#$@: $^"

%:
	dh $@


rule/prep:
	sync

${tarball}: rule/prep
	 tar cvfz "$@" \
--transform "s|^./|${package}-${version}/|" \
--exclude 'debian' --exclude-vcs \
.
	@ls -l $@

rule/tarball: ${tarball}
	@ls $^

rule/dist: rule/tarball
	@echo "# $@: $^"

rule/setup: /etc/debian_version
	sudo apt-get update -y
	sudo apt-get install -y \
  build-essential \
  debhelper \
  devscripts \
\
  libminiupnpc-dev libnatpmp-dev \
  libssl-dev \
  #EOL

rule/version:
	@echo ${version}
	-cat /etc/os-release
	${MAKE} --version
	${CC} --version

rule/debuild: debian/rules
	@which ${@F} || ${<D}/${<F} ${@D}/setup
	@ls ${tarball} || ${<D}/${<F} ${@D}/tarball
	${<D}/${<F} ${@D}/version
	${@F} -S -us -uc
	${@F} -us -uc


.PHONY: rule/debuild

